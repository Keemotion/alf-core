#!/usr/bin/env ruby
$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)
require "alf"

def normalize(args)
  opts = []
  while !args.empty? && (args.first =~ /^\-/)
    opts << args.shift 
  end
  if args.empty? or (args.size == 1 && File.exists?(args.first))
    opts << "exec"
  end
  opts += args
end
Alf.run(normalize(ARGV), __FILE__)
